<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pageModels="clr-namespace:SolarLab.AdvertBoard.Mobile.Presentation.PageModels"
    xmlns:f="clr-namespace:Fonts"
    x:Class="SolarLab.AdvertBoard.Mobile.Presentation.Pages.Controls.Filters.PriceFilterView"
    x:DataType="pageModels:FiltersPageModel">

    <VerticalStackLayout Spacing="8" HorizontalOptions="Fill">

        <Label Text="Цена"
               Style="{StaticResource Title3}"
               Margin="0,0,0,4"/>

        <!-- Единая карточка для полей "От" и "До" -->
        <Border BackgroundColor="{AppThemeBinding Light={StaticResource LightSecondaryBackground}, Dark={StaticResource DarkSecondaryBackground}}"
                StrokeShape="RoundRectangle 12"
                StrokeThickness="0"
                Padding="0">
            <Border.Shadow>
                <Shadow Brush="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Black}}"
                        Opacity="0.10"
                        Offset="0,4"
                        Radius="8" />
            </Border.Shadow>

            <Grid ColumnDefinitions="*, 1, *">

                <!-- Цена От -->
                <VerticalStackLayout Grid.Column="0" Padding="12, 8" Spacing="0">
                    <Label Text="От"
                           Style="{StaticResource Caption2}"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"/>

                    <Grid ColumnDefinitions="*, Auto" VerticalOptions="Center">
                        <Entry Text="{Binding PriceFrom, Mode=TwoWay}"
                               Keyboard="Numeric"
                               Placeholder="1000"
                               PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                               Style="{StaticResource Body1}"
                               HeightRequest="36"
                               VerticalOptions="Center"
                               Margin="-6,0,0,0"
                               ClearButtonVisibility="Never"
                               BackgroundColor="Transparent"
                               ReturnType="Done"/>

                        <Image Grid.Column="1"
                               Source="{FontImageSource Glyph={x:Static f:FluentUI.dismiss_circle_24_regular}, 
                                                        FontFamily={x:Static f:FluentUI.FontFamily}, 
                                                        Color={AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray500}}, 
                                                        Size=20}"
                               HeightRequest="24"
                               WidthRequest="24"
                               VerticalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ClearPriceFromCommand}"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                </VerticalStackLayout>

                <!-- Разделитель -->
                <BoxView Grid.Column="1" 
                         WidthRequest="1" 
                         VerticalOptions="Fill" 
                         Color="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                         Margin="0, 8"/>

                <!-- Цена До -->
                <VerticalStackLayout Grid.Column="2" Padding="12, 8" Spacing="0">
                    <Label Text="До"
                           Style="{StaticResource Caption2}"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"/>

                    <Grid ColumnDefinitions="*, Auto" VerticalOptions="Center">
                        <Entry Text="{Binding PriceTo, Mode=TwoWay}"
                               Keyboard="Numeric"
                               Placeholder="100000"
                               PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                               Style="{StaticResource Body1}"
                               HeightRequest="36"
                               VerticalOptions="Center"
                               Margin="-6,0,0,0"
                               ClearButtonVisibility="Never"
                               BackgroundColor="Transparent"
                               ReturnType="Done"/>

                        <Image Grid.Column="1"
                               Source="{FontImageSource Glyph={x:Static f:FluentUI.dismiss_circle_24_regular}, 
                                                        FontFamily={x:Static f:FluentUI.FontFamily}, 
                                                        Color={AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray500}}, 
                                                        Size=20}"
                               HeightRequest="24"
                               WidthRequest="24"
                               VerticalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ClearPriceToCommand}"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                </VerticalStackLayout>
            </Grid>
        </Border>
    </VerticalStackLayout>
</ContentView>