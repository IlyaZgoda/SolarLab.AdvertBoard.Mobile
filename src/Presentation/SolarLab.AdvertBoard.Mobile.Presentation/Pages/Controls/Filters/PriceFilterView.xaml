<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pageModels="clr-namespace:SolarLab.AdvertBoard.Mobile.Presentation.PageModels"
    x:Class="SolarLab.AdvertBoard.Mobile.Presentation.Pages.Controls.Filters.PriceFilterView"
    x:DataType="pageModels:FiltersPageModel">

    <!-- Обернули в VerticalStackLayout -->
    <VerticalStackLayout Spacing="8" HorizontalOptions="Fill">

        <!-- Текст сверху -->
        <Label Text="Цена"
               Style="{StaticResource Title3}"
               FontSize="18"
               TextColor="{AppThemeBinding Light=Black, Dark=White}" 
               HorizontalOptions="Start"/>

        <!-- Горизонтальный ряд рамок (ваш существующий код) -->
        <HorizontalStackLayout Spacing="16" HorizontalOptions="Center">

            <!-- Цена от -->
            <Border 
               Padding="8"
               WidthRequest="150"
               HeightRequest="60">

                <Grid RowDefinitions="Auto,*">

                    <!-- Верхний текст -->
                    <Label Text="От"
                       FontSize="10"
                       TextColor="#666"
                       VerticalOptions="Start"
                       HorizontalOptions="Start"/>

                    <!-- Entry + крестик -->
                    <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
                        <Entry Text="{Binding PriceFrom, Mode=TwoWay}"
                           Keyboard="Numeric"
                           FontSize="14"
                           TextColor="#222"
                           BackgroundColor="Transparent"
                           HeightRequest="36"
                           VerticalOptions="Center"
                           Margin="0"
                           ClearButtonVisibility="Never"/>

                        <Image Grid.Column="1"
                             Source="{StaticResource IconClean}"
                             HeightRequest="22"
                             WidthRequest="22"
                             VerticalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ClearPriceFromCommand}"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                </Grid>
            </Border>

            <!-- Цена до -->
            <Border 
               Padding="8"
               WidthRequest="150"
               HeightRequest="60">

                <Grid RowDefinitions="Auto,*">

                    <!-- Верхний текст -->
                    <Label Text="До"
                       FontSize="10"
                       TextColor="#666"
                       VerticalOptions="Start"
                       HorizontalOptions="Start"/>

                    <!-- Entry + крестик -->
                    <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
                        <Entry Text="{Binding PriceTo, Mode=TwoWay}"
                           Keyboard="Numeric"
                           FontSize="14"
                           TextColor="#222"
                           BackgroundColor="Transparent"
                           HeightRequest="36"
                           VerticalOptions="Center"
                           Margin="0"
                           ClearButtonVisibility="Never"/>

                        <Image Grid.Column="1"
                              Source="{StaticResource IconClean}"
                              HeightRequest="22"
                              WidthRequest="22"
                              VerticalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ClearPriceToCommand}"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                </Grid>
            </Border>

        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentView>
