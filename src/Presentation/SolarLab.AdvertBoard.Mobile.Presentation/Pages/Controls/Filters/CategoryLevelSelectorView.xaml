<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:SolarLab.AdvertBoard.Mobile.Contracts.Categories;assembly=SolarLab.AdvertBoard.Mobile.Contracts"
    x:Class="SolarLab.AdvertBoard.Mobile.Presentation.Pages.Controls.Filters.CategoryLevelSelectorView"
    xmlns:pageModels="clr-namespace:SolarLab.AdvertBoard.Mobile.Presentation.PageModels"
    x:DataType="pageModels:FiltersPageModel">

    <CollectionView
        ItemsSource="{Binding CurrentLevelCategories}"
        SelectionMode="Single"
        SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
        ItemsLayout="HorizontalList">

        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:CategoryNode">
                <Border BackgroundColor="LightGray" Padding="8" Margin="4">
                    <Label Text="{Binding Title}" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>
</ContentView>
