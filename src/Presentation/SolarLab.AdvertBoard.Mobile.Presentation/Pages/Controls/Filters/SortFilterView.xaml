<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pageModels="clr-namespace:SolarLab.AdvertBoard.Mobile.Presentation.PageModels"
    x:Class="SolarLab.AdvertBoard.Mobile.Presentation.Pages.Controls.Filters.SortFilterView"
    x:DataType="pageModels:FiltersPageModel">

    <ContentView.Resources>
        <pageModels:EnumEqualsConverter x:Key="EnumEqualsConverter" />
    </ContentView.Resources>

    <Border StrokeThickness="0"
            StrokeShape="RoundRectangle 16"
            Padding="16"
            BackgroundColor="{AppThemeBinding Light={StaticResource LightSecondaryBackground}, Dark={StaticResource DarkSecondaryBackground}}">
        <Border.Shadow>
            <Shadow Brush="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Black}}"
                    Opacity="0.15" Offset="0,4" Radius="12"/>
        </Border.Shadow>

        <VerticalStackLayout Spacing="12">

            <Label Text="Сортировка"
                   Style="{StaticResource Title3}" />

            <VerticalStackLayout Spacing="4">

                <RadioButton Content="Сначала новые"
                             GroupName="SortOptions"
                             Value="{x:Static pageModels:SortOption.Newest}"
                             
                             IsChecked="{Binding SelectedSortOption,
                                         Mode=TwoWay,
                                         Converter={StaticResource EnumEqualsConverter},
                                         ConverterParameter={x:Static pageModels:SortOption.Newest}}" />

                <RadioButton Content="Сначала старые"
                             GroupName="SortOptions"
                             Value="{x:Static pageModels:SortOption.Oldest}"
                       
                             IsChecked="{Binding SelectedSortOption,
                                         Mode=TwoWay,
                                         Converter={StaticResource EnumEqualsConverter},
                                         ConverterParameter={x:Static pageModels:SortOption.Oldest}}" />

                <RadioButton Content="Дешевле"
                             GroupName="SortOptions"
                             Value="{x:Static pageModels:SortOption.Cheaper}"
                           
                             IsChecked="{Binding SelectedSortOption,
                                         Mode=TwoWay,
                                         Converter={StaticResource EnumEqualsConverter},
                                         ConverterParameter={x:Static pageModels:SortOption.Cheaper}}" />

                <RadioButton Content="Дороже"
                             GroupName="SortOptions"
                             Value="{x:Static pageModels:SortOption.Expensive}"
                            
                             IsChecked="{Binding SelectedSortOption,
                                         Mode=TwoWay,
                                         Converter={StaticResource EnumEqualsConverter},
                                         ConverterParameter={x:Static pageModels:SortOption.Expensive}}" />

                <RadioButton Content="По умолчанию"
                             GroupName="SortOptions"
                             Value="{x:Static pageModels:SortOption.Default}"
                   
                             IsChecked="{Binding SelectedSortOption,
                                         Mode=TwoWay,
                                         Converter={StaticResource EnumEqualsConverter},
                                         ConverterParameter={x:Static pageModels:SortOption.Default}}" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </Border>

</ContentView>
