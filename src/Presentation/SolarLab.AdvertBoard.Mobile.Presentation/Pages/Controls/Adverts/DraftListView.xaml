<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:adverts="clr-namespace:SolarLab.AdvertBoard.Mobile.Presentation.Pages.Controls.Adverts"
             xmlns:contracts="clr-namespace:SolarLab.AdvertBoard.Mobile.Contracts.Adverts;assembly=SolarLab.AdvertBoard.Mobile.Contracts"
             x:Class="SolarLab.AdvertBoard.Mobile.Presentation.Pages.Controls.Adverts.DraftListView"
             x:Name="Root">

    <CollectionView
        ItemsSource="{Binding Items, Source={x:Reference Root}}"
        SelectedItem="{Binding SelectedItem, Source={x:Reference Root}, Mode=TwoWay}"
        RemainingItemsThreshold="5"
        RemainingItemsThresholdReachedCommand="{Binding LoadNextPageCommand, Source={x:Reference Root}}"
        SelectionMode="Single"
        ItemSizingStrategy="MeasureAllItems"
        Margin="0,12,0,0">

        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="contracts:AdvertDraftItem">
                <adverts:DraftListItemView />
            </DataTemplate>
        </CollectionView.ItemTemplate>

        <!-- Отступ внизу -->
        <CollectionView.Footer>
            <BoxView HeightRequest="20" BackgroundColor="Transparent"/>
        </CollectionView.Footer>
    </CollectionView>
</ContentView>
