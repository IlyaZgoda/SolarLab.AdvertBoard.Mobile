<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:contracts="clr-namespace:SolarLab.AdvertBoard.Mobile.Contracts.Adverts;assembly=SolarLab.AdvertBoard.Mobile.Contracts"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SolarLab.AdvertBoard.Mobile.Presentation.Pages.Controls.Adverts.DraftListItemView"
             x:DataType="contracts:AdvertDraftItem">

    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,12">

        <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="6">

            <!-- Заголовок -->
            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="{Binding Title}"
                   Style="{StaticResource Body1Strong}"
                   TextColor="{AppThemeBinding Light={StaticResource DarkOnLightBackground}, Dark={StaticResource LightOnDarkBackground}}" />

            <!-- Описание -->
            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="{Binding Description}"
                   Style="{StaticResource Caption1}"
                   LineBreakMode="TailTruncation"
                   MaxLines="3"
                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />

            <!-- Цена, категория и дата -->
            <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto" Margin="0,6,0,0" VerticalOptions="Center">

                <!-- Цена -->
                <Label Grid.Column="0"
                       Text="{Binding Price, StringFormat='{0:C0}'}"
                       Style="{StaticResource Body1Strong}"
                       TextColor="{AppThemeBinding Light={StaticResource PriceLight}, Dark={StaticResource PriceDark}}" 
                       VerticalOptions="Center"/>

                <!-- Категория -->
                <Border Grid.Column="1"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"
                        StrokeShape="RoundRectangle 8"  
                        StrokeThickness="1"
                        Margin="12,0,0,0"
                        Padding="8,4" 
                        Background="Transparent"
                        Stroke="{AppThemeBinding Light={StaticResource CategoryBorderLight}, Dark={StaticResource CategoryBorderDark}}">
                    <Label Text="{Binding CategoryTitle}"
                           Style="{StaticResource Caption1Strong}"
                           TextColor="{AppThemeBinding Light={StaticResource CategoryTextLight}, Dark={StaticResource CategoryTextDark}}" 
                           VerticalOptions="Center"
                           HorizontalOptions="Start"/>
                </Border>

                <!-- Дата создания -->
                <Label Grid.Column="2"
                       Text="{Binding CreatedAt, StringFormat='{0:M}'}"
                       Style="{StaticResource Caption2}"
                       VerticalOptions="Center"
                       HorizontalOptions="End"
                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />

            </Grid>
        </Grid>
    </Border>
</ContentView>
