<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SolarLab.AdvertBoard.Mobile.Presentation.Pages.Controls.MainPageHeaderView">
    <!--Row 0: Шапка-->
    <Grid Grid.Row="0"  ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="{StaticResource LayoutSpacing}" BackgroundColor="Transparent">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnBackgroundTapped"/>
        </Grid.GestureRecognizers>

        <!--Логотип-->
        <Label Text="AdvertBoard"
            Style="{StaticResource Title2}"
            VerticalOptions="Center"/>

        <!--Поисковая строка-->
        <Border Grid.Column="1"
             Padding="10,0"
             StrokeThickness="0"
             Background="{AppThemeBinding Light={StaticResource LightSecondaryBackground}, Dark={StaticResource DarkSecondaryBackground}}"
             VerticalOptions="Center"
             HorizontalOptions="Fill"
             HeightRequest="40">
            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="{StaticResource LayoutSpacing}">

                <!--Иконка поиска-->
                <Image x:Name="SearchIcon"
                    Source="{StaticResource IconSearch}"
                    HeightRequest="20"
                    WidthRequest="20"
                    VerticalOptions="Center"/>

                <!--Поле ввода-->
                <Entry x:Name="SearchEntry"
                    Grid.Column="1"
                    Placeholder="Поиск"
                    BackgroundColor="Transparent"
                    VerticalOptions="Center"
                    FontSize="16"
                    Focused="OnSearchFocused"
                    Unfocused="OnSearchUnfocused"
                    TextColor="{AppThemeBinding Light={StaticResource DarkOnLightBackground}, Dark={StaticResource LightOnDarkBackground}}"
                    PlaceholderColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />

                <!--Иконка фильтров-->
                <Image Grid.Column="2"
                    Source="{StaticResource IconFilter}"
                    HeightRequest="22"
                    WidthRequest="22"
                    VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenFiltersCommand}" Tapped="OnFilterTapped"/>
                    </Image.GestureRecognizers>
                </Image>

            </Grid>
        </Border>

        <!--Кнопка Войти-->
        <Button Grid.Column="3"
             Text="Войти"
             BackgroundColor="Transparent"
             TextColor="{AppThemeBinding Light={StaticResource DarkOnLightBackground}, Dark={StaticResource LightOnDarkBackground}}"
             FontAttributes="Bold"
             VerticalOptions="Center"
             Command="{Binding LoginCommand}"/>
    </Grid>
</ContentView>
