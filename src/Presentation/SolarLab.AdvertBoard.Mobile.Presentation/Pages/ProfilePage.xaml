<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:controls="clr-namespace:SolarLab.AdvertBoard.Mobile.Presentation.Pages.Controls"
             xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.SegmentedControl;assembly=Syncfusion.Maui.Toolkit"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SolarLab.AdvertBoard.Mobile.Presentation.Pages.ProfilePage"
             Title="ProfilePage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="24">

            <!-- Профиль -->
            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="{StaticResource LayoutSpacing}">

                    <!-- Имя -->
                    <Label 
            Text="{Binding FullName}"
            Style="{StaticResource Title2}"
            Margin="0,0,0,2" />

                    <!-- Email -->
                    <Label 
            Text="{Binding ContactEmail}"
            Style="{StaticResource Caption1}"
            TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"
            Margin="0,0,0,10" />

                    <!-- Разделитель -->
                    <BoxView 
            HeightRequest="1"
            BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray900}}"
            HorizontalOptions="Fill"
            Margin="0,0,0,10" />

                    <!-- Кнопка редактирования -->
                    <Button 
            Text="Редактировать профиль"
            Command="{Binding EditProfileCommand}"
            Style="{StaticResource OutlineButton}"
            HorizontalOptions="Center" />

                </VerticalStackLayout>
            </Frame>



            <!-- Действия -->
            <Frame Style="{StaticResource CardStyle}">
                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" Padding="0" ColumnSpacing="16" RowSpacing="16">

                    <!-- Заголовок на всю ширину -->
                    <Label 
            Grid.Row="0" Grid.ColumnSpan="2"
            Text="Мои объявления"
            Style="{StaticResource SectionTitleStyle}" />

                    <!-- Вертикальный стек кнопок в первой колонке -->
                    <VerticalStackLayout 
            Grid.Row="1" Grid.Column="0"
            Spacing="12">

                        <Button 
                Text="Черновики"
                Style="{StaticResource ActionButton}"
                Command="{Binding ShowDraftsCommand}" />

                        <Button 
                Text="Опубликованные"
                Style="{StaticResource ActionButton}"
                Command="{Binding ShowPublishedCommand}" />
                    </VerticalStackLayout>

                    <!-- Кнопка Добавить во второй колонке, справа у края -->
                    <controls:AddButton
            Grid.Row="1" Grid.Column="1"
            Command="{Binding CreateAdvertCommand}"
            HorizontalOptions="End"
            VerticalOptions="Start"/>
                </Grid>
            </Frame>



            <!-- Цветовая тема -->
            <Frame Style="{StaticResource CardStyle}">
                <Grid ColumnDefinitions="*,Auto" Padding="0" VerticalOptions="Center">

                    <!-- Текст слева -->
                    <Label 
            Text="Цветовая тема" 
            Style="{StaticResource SectionTitleStyle}" 
            VerticalOptions="Center"
            Grid.Column="0"/>

                    <!-- SegmentedControl справа -->
                    <sf:SfSegmentedControl 
            Grid.Column="1"
            HorizontalOptions="End"
            VerticalOptions="Center"
            SegmentWidth="40"
            SegmentHeight="40"
            SelectedIndex="{Binding SelectedThemeIndex, Mode=TwoWay}">
                        <sf:SfSegmentedControl.ItemsSource>
                            <x:Array Type="{x:Type sf:SfSegmentItem}">
                                <sf:SfSegmentItem ImageSource="{StaticResource IconLight}" SemanticProperties.Description="Light mode"/>
                                <sf:SfSegmentItem ImageSource="{StaticResource IconDark}" SemanticProperties.Description="Dark mode"/>
                            </x:Array>
                        </sf:SfSegmentedControl.ItemsSource>
                    </sf:SfSegmentedControl>

                </Grid>
            </Frame>

            <!-- Выход -->
            <Button 
                Text="Выйти"
                Command="{Binding LogoutCommand}"
                TextColor="Red"
                Style="{StaticResource OutlineButton}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>